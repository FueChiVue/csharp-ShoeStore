
<body>
  <h1>Storess:</h2>
  <hr />

  @if(@Model.Count == 0)
  {
    <p>There are no Stores.</p>
  }
  else
  {
    <ul>
      @foreach(var store in Model)
      {
        <li><a href="/stores/@store.GetId()">@store.GetName()</a> | <a href="/store/edit/@store.GetId()">Edit</a> | <a href="/store/delete/@store.GetId()">Delete</a></li>
      }
    </ul>
    <form action="/stores/delete/all" method="post">
      <button type="submit">Clear all stores</button>
    </form>
  }

  <h4><a href="/store/new">Add new Store</a></h4>
  <h4><a href="/">Back to main page</a></h4>
</body>
