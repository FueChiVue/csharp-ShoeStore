@Html.Partial("header.cshtml")
<body class="brand">
  <div class="container">
    <div class="jumbotron brandheader">
      <h1>Brands</h1>
    </div>
    <div class="container">
      @if(@Model.Count == 0)
      {
        <p>There are no brands.</p>
      }
      else
      {
        <ul>
          @foreach(var brand in Model)
          {
            <li><a href="/brand/@brand.GetId()">@brand.GetName()</a> | <a href="/brand/edit/@brand.GetId()">Edit</a> | <a href="/brand/delete/@brand.GetId()">Delete</a></li>
          }
        </ul>
        <form action="/brands/delete/all" method="post">
          <button class="btn btn-success" type="submit">Clear all brands</button>
        </form>
      }

      <h4><a href="/brand/new">Add new Brand</a></h4>
      <h4><a href="/">Back to main page</a></h4>
    </div>
  </div>
</body>
